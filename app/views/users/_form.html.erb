<%= render 'shared/errors', obj: @user%>
<div>
  <div class='col bg-info text-white'>
  <div class="container">
          <%= form_for @user  do |f| %>
            <div class="form-group py-3 d-flex">
              <div class="col-5 h3 text-right control-label">
                <%=f.label :user %>
              </div>
              <div class="">
                <%=f.text_field :user, class: 'form-control', placeholder: 'username', autofocus: true %>
              </div>
            </div>
  <div class="form-group py-3 d-flex">
    <div class="col-5 h3 text-right control-label">
      <%= f.label :email %>
    </div>
    <div class="">
      <%= f.text_field :email , class: "form-control", placeholder: "email" %>
    </div>
  </div>


  <div class="form-group py-3 d-flex">
    <div class="col-5 h3 text-right control-label">
      <%= f.label :password %>
    </div>
    <div class="">
      <%= f.password_field :password , class: "form-control", placeholder: "password" %>
    </div>
  </div>


  <div class="form-group text-center">
    <div class="col">
      <%= f.submit(@user.new_record? ? "Sign Up" : "Update account", class: "btn btn-outline-light btn-primary btn-lg")  %>
    </div>
  </div>

  <div class="form-group text-center">
    <div class="col pb-4">
<%= link_to 'Cancel request and return to aricles listing', articles_path, class: "btn mt-4  btn-primary" %>
    </div>
  </div>
  <% end %>
</div>
</div>
</div>
